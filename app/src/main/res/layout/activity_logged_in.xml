<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/darkbacon"
    tools:context=".loggedIn">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/orderOnline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/menuphoto" />

        <ImageButton
            android:id="@+id/dailySpecials"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"

            android:src="@drawable/specialphoto" />

        <ImageView
            android:id="@+id/paragonlogo"
            android:layout_width="216dp"
            android:layout_height="88dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:visibility="visible"
            app:srcCompat="@drawable/whitetransparagon" />

        <Button
            android:id="@+id/managerbtn"
            android:layout_width="216dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:backgroundTint="#830C0C"
            android:text="Manager Options"
            android:textSize="18dp"
            android:visibility="gone"
            />
        ></LinearLayout>


</RelativeLayout>